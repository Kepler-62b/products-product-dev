{% trans_default_domain 'admin.products.product' %}


<div class="d-flex flex-wrap gap-3">
	{% set section = null %}
	
	{% for property in form.property %}
	
	{% if section != property.section.vars.data %}
	
	{% if section %}
</div>
	</div>
{% endif %}



<div class="card card-flush w-50 gap-2 border-light">
	
	<div class="card-header border-light bg-body">
		<div class="card-title">
			<h4>
				{# Секция #}
				{{ property.section.vars.label }}
			</h4>
		</div>
	</div>
	<div class="card-body pt-0">
		
		{% set section = property.section.vars.data %}
		
		{% endif %}
		
		{{ form_row(property.section) }}
		{{ form_row(property.value) }}
		
		{% endfor %}
		
	</div>

</div>
</div>


















