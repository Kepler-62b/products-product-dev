{% trans_default_domain 'products.product' %}

<div class="d-flex gap-2">
	
	<div class="d-flex flex-column gap-2 w-50 mb-2">
		{# Настройки локали #}
		
		<div class="card card-flush p-4">
			<div class="card-header">
				<div class="card-title">
					<h2>
						Категории
					</h2>
				</div>
			</div>
			
			<div class="card-body pt-0">
				{# КАТЕГОРИИ #}
				{{ include(_self|replace({ "form.main.html.twig": "_category.html.twig" })) }}
			</div>
		</div>
		
		
		<div class="card card-flush p-4">
			
			<div class="card-header">
				<div class="card-title">
					<h2>
						{# Статус активности #}
						Торговый каталог
					</h2>
				</div>
			</div>
			<div class="card-body pt-0">
				{# Торговый каталог #}
				{{ include(_self|replace({ "form.main.html.twig": "_price.html.twig" })) }}
			</div>
		</div>
	
	</div>
	
	<div class="d-flex flex-column w-40 flex-row-fluid gap-2">
		
		
		<div class="card card-flush p-4">
			
			<div class="card-header">
				<div class="card-title">
					<h2>
						{# Секции профиля #}
						Основные настройки продукта
					</h2>
				</div>
			</div>
			
			<div class="card-body pt-0">
				
				{# Профиль пользователя #}
				{{ form_row(form.info.profile, { label : 'Профиль пользователя'|trans } ) }}
				
				{# Активность #}
				{{ include(_self|replace({ "form.main.html.twig": "_active.html.twig" })) }}
				
				{# INFO #}
				{# {{ include(_self|replace({ "form.main.html.twig": "_info.html.twig" })) }} #}
			</div>
		</div>
		
		
		<div class="card card-flush p-4">
			
			<div class="card-header">
				<div class="card-title">
					<h2>
						Настройки локали
					</h2>
				</div>
			</div>
			
			<div class="card-body pt-0">
				{# НАСТРОЙКИ ЛОКАЛИ #}
				{{ include(_self|replace({ "form.main.html.twig": "_trans.html.twig" })) }}
			</div>
		</div>
		
		<div class="card card-flush p-4">
			
			<div class="card-header">
				<div class="card-title">
					<h2>
						Настройки SEO
					</h2>
				</div>
			</div>
			
			<div class="card-body pt-0">
				{# SEO #}
				{{ include(_self|replace({ "form.main.html.twig": "_seo.html.twig" })) }}
			</div>
		</div>
	
	
	</div>

</div>


