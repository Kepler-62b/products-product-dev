<div class="h-100">
    <div class="d-flex align-items-center justify-content-between mb-3">
        <h3 class="fs-6 mb-0 text-uppercase fw-bold">
            лучшие предложения
        </h3>
        <form action="{{ path('blackdragon:reviews') }}">
            <button class="btn shadow rounded-5 fw-medium fs-12 opacity-0 {{ brand ? "d-none" : "" }}" disabled>
                Все отзывы
            </button>
        </form>
    </div>
    <ol class="list-group list-group-numbered rounded-4 p-2" style="background-color: #fff4d8; height: 378.3px">
        {% for i in 0..9 %}
            <li class="list-group-item  best-offers-item border-0 list-group-item-action bg-transparent fs-12"
                style="width: max-content;"><a class="text-black text-decoration-none"
                                               href="{{ path('blackdragon:model') }}">Длинное название шины</a></li>
        {% endfor %}
    </ol>
</div>

